<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AutoAID ADMIN</title>
  <!--Material CDN-->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
  <!--Stylesheet-->
  <link rel="stylesheet" href="css/admin.css">
</head>

<body>
  <div class="container">
    <aside>
      <div class="top">
        <div class="logo">
          <img src="">
          <h2>AutoAID</h2>
        </div>
        <div class="close" id="close-btn">
          <span class="material-symbols-sharp">close</span>
        </div>
      </div>

      <div class="sidebar">
        <a href="#" class="active">
          <span class="material-symbols-sharp">window</span>
          <h3>Dashboard</h3>
        </a>
        <a href="#">
          <span class="material-symbols-sharp">inventory</span>
          <h3>Inventory</h3>
        </a>
        <a href="#">
          <span class="material-symbols-sharp">garage</span>
          <h3>Garage</h3>
        </a>
        <a href="#">
          <span class="material-symbols-sharp">payments</span>
          <h3>Accounts</h3>
        </a>
        <a href="#">
          <span class="material-symbols-sharp">badge</span>
          <h3>Employees</h3>
        </a>
      </div>
    </aside>
    <main>
      <h1>Welcome <%= name %></h1>

      <div class="date">
        <p><%= day%></p>
      </div>
      <!--Bookings-->
      <div class="insights">
        <div class="bookings">
          <span class="material-symbols-sharp">receipt_long</span>
          <div class="middle">
            <div class="left">
              <h3>Bookings</h3>
              <h1>8</h1>
            </div>
            <div class="progress">
              <!--<svg>
                <circle cx='38' cy='38' r='36'></circle>
              </svg>-->
              <div class="number">
                <h1>90%</h1>
              </div>
            </div>
          </div>
          <small class="text-muted">Last 24 Hours</small>
        </div>
        <!--Employees-->
        <div class="employees">
          <span class="material-symbols-sharp">badge</span>
          <div class="middle">
            <div class="left">
              <h3>Employees Available</h3>
              <h1>2</h1>
            </div>
            <div class="progress">
              <!--svg>
                <circle cx='38' cy='38' r='36'></circle>
              </svg-->
              <div class="number">
                <h1>20%</h1>
              </div>
            </div>
          </div>
          <small class="text-muted">Last 24 Hours</small>
        </div>
        <!--Inventory-->
        <div class="inventory">
          <span class="material-symbols-sharp">inventory</span>
          <div class="middle">
            <div class="left">
              <h3>Inventory Items Available</h3>
            </div>
            <div class="progress">
              <!--svg>
                <circle cx='38' cy='38' r='36'></circle>
              </svg-->
              <div class="number">
                <h1>14%</h1>
              </div>
            </div>
          </div>
          <small class="text-muted">Last 24 Hours</small>
        </div>

      </div>
    </main>
  </div>
</body>

</html>